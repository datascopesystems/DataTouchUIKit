<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <datatouch.uikit.components.statefulrecyclerview.StatefulRecyclerView
        android:id="@+id/srv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srv_layout_type="linear_vertical"
        app:srv_initial_state="empty"
        app:srv_empty_state_drawable="@drawable/ic_project_planning_white"
        app:srv_empty_state_title="No items found"
        />

</LinearLayout>