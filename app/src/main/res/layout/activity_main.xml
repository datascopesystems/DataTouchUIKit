<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <datatouch.uikit.components.buttons.ToggleButtonSmall
            android:id="@+id/tbSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tbs_checked="true"
            app:tbs_locked="false" />


        <datatouch.uikit.components.dropdown.FormDropDownListView
            android:id="@+id/dropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ddlv_hint="Test Hint"
            app:ddlv_icon="@drawable/ic_shutter_white"
            app:ddlv_left_unselected_hint="Left unselected hint"
            app:ddlv_mandatory_field="false" />

        <datatouch.uikit.components.edittext.search.CriteriaSearchEditText
            android:id="@+id/cset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cset_hint="Type something" />

        <datatouch.uikit.components.buttons.ToggleButton
            android:id="@+id/gtb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gtb_checked="false"
            app:gtb_checked_text="Arrival"
            app:gtb_glow_button="false"
            app:gtb_glow_button_radius="50dp"
            app:gtb_glow_color_checked="@color/accent_end"
            app:gtb_glow_color_unchecked="@color/accent_start"
            app:gtb_icon_checked="@drawable/ic_chart_white"
            app:gtb_icon_size="40dp"
            app:gtb_icon_unchecked="@drawable/ic_settings_white"
            app:gtb_text_size="24sp"
            app:gtb_unchecked_text="Departure" />

        <datatouch.uikit.components.buttons.ButtonGlow
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <datatouch.uikit.components.buttons.CActionButtonAccentNegativeRoundOutline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_close_dialog_white"
            app:title="@string/cancel" />

        <datatouch.uikit.components.buttons.CActionButtonAccent
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:active_background="@drawable/action_button_background_accent_end"
            app:icon="@drawable/ic_settings_white"
            app:title="@string/from" />

        <datatouch.uikit.components.buttons.CActionButtonAccent
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:active_background="@drawable/action_button_background_accent_start"
            app:icon="@drawable/ic_settings_white"
            app:title="@string/from" />

        <datatouch.uikit.components.edittext.FormEditText
            android:id="@+id/fetMan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:et_hint="this is edittext" />

        <datatouch.uikit.components.edittext.FormEditText
            android:id="@+id/fet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:et_hint="this is edittext"
            app:et_mandatory_field="true" />

        <datatouch.uikit.components.dropdown.FormAutoCompleteDropDownListView
            android:id="@+id/facddkv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:actv_mandatory_field="true" />

        <androidx.appcompat.widget.Toolbar style="@style/MarginlessToolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <datatouch.uikit.components.buttons.ImageButtonAccentOutline
                    android:id="@+id/btnTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:visibility="visible"
                    app:icon="@drawable/ic_check_white" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>

</ScrollView>