<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StatefulRecyclerView">
        <attr name="srv_detailed_loading_info" format="boolean" />

        <attr name="srv_state_text_color" format="color" />

        <attr name="srv_dim_title" format="string" />

        <attr name="srv_empty_state_title" format="string" />
        <attr name="srv_empty_state_subtitle" format="string" />
        <attr name="srv_empty_state_drawable" format="reference" />

        <attr name="srv_loading_state_title" format="string" />
        <attr name="srv_loading_state_subtitle" format="string" />

        <attr name="srv_action_button_visible" format="boolean" />
        <attr name="srv_action_button_text" format="string" />

        <attr name="srv_initial_state" format="enum">
            <enum name="loading" value="0" />
            <enum name="empty" value="1" />
            <enum name="container" value="2" />
        </attr>

        <attr name="srv_layout_type" format="enum">
            <enum name="linear_vertical" value="0"/>
            <enum name="linear_horizontal" value="1"/>
            <enum name="grid" value="2"/>
        </attr>

        <attr name="srv_grid_layout_columns_count" format="integer"/>

        <attr name="srv_enable_empty_list_footer" format="boolean"/>

        <attr name="srv_enable_list_line_divider" format="boolean"/>

    </declare-styleable>
</resources>