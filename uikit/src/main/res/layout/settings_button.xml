<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/settings_button_background">

    <datatouch.uikit.components.tooltip.HalfRoundWithGlowView
        android:id="@+id/vArcWithGlow"
        android:layout_width="40dp"
        android:layout_height="110dp"
        android:scaleY="1.25" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="-5dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/vArcWithGlow"
        android:contentDescription="@null"
        android:src="@drawable/ic_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivIcon"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="1"
            android:text="Web Modules"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="2"
            android:text="Create and manage Web Modules"
            android:textColor="@color/white_transparent_text"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>