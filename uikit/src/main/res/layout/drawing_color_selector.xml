<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:foregroundGravity="center_vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/llColorsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivColour0"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#4bffcf" />

                <ImageView
                    android:id="@+id/ivColour1"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#caff4d" />

                <ImageView
                    android:id="@+id/ivColour2"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#ff804d" />

                <ImageView
                    android:id="@+id/ivColour3"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#4cceff" />

                <ImageView
                    android:id="@+id/ivColour4"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#00a8ff" />

                <ImageView
                    android:id="@+id/ivColour5"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#ffc888" />

                <ImageView
                    android:id="@+id/ivColour6"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#feff8a" />

                <ImageView
                    android:id="@+id/ivColour7"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#b9f4fc" />

                <ImageView
                    android:id="@+id/ivColour8"
                    android:layout_width="@dimen/color_selector_circle_size"
                    android:layout_height="@dimen/color_selector_circle_size"
                    android:layout_marginEnd="@dimen/color_selector_circle_margin"
                    android:contentDescription="@null"
                    android:background="@drawable/background_circle_accent"
                    android:tag="#ff4bd6" />


            </LinearLayout>
        </HorizontalScrollView>

        <datatouch.uikit.components.buttons.CActionImageButton
            android:id="@+id/btnPickColor"
            style="@style/ActionButtonEdit"
            android:layout_alignParentEnd="true"
            app:iconDrawable="@drawable/ic_color_eyedropper_white" />
    </RelativeLayout>
</RelativeLayout>