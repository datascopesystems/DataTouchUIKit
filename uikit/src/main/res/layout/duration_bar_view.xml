<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_accent_outline"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivDateFrom"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/ic_calendar_white"
        android:tint="@color/accent_end_light"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tvDateFromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/accent_end_light"
        android:text="@string/from"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tvDateFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/accent_start_light"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"/>

    <ImageView
        android:id="@+id/ivDateTo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/ic_calendar_white"
        android:tint="@color/accent_end_light"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tvDateToLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/accent_end_light"
        android:text="@string/to"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tvDateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="10dp"/>

</LinearLayout>
