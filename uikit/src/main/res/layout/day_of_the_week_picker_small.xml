<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <ToggleButton
        android:id="@+id/toggle_0_small"
        style="@style/MaterialWeekDayPickerSmallToggle"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ToggleButton
        android:id="@+id/toggle_1_small"
        style="@style/MaterialWeekDayPickerSmallToggle"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <ToggleButton
        android:id="@+id/toggle_2_small"
        style="@style/MaterialWeekDayPickerSmallToggle"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ToggleButton
        android:id="@+id/toggle_3_small"
        style="@style/MaterialWeekDayPickerSmallToggle"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <ToggleButton
        android:id="@+id/toggle_4_small"
        style="@style/MaterialWeekDayPickerSmallToggle"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ToggleButton
        android:id="@+id/toggle_5_small"
        style="@style/MaterialWeekendPickerSmallToggle"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ToggleButton
        android:id="@+id/toggle_6_small"
        style="@style/MaterialWeekendPickerSmallToggle"/>

</LinearLayout>
