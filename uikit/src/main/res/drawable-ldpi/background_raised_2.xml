<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

	<!-- bottom shadow -->
	<item
		android:bottom="0px"
		android:left="0px"
		android:right="0px"
		android:top="0px">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<gradient
				android:angle="270"
				android:centerColor="#f000"
				android:centerX="0.96"
				android:dither="true"
				android:endColor="#7000"
				android:startColor="#c000" />

			<corners android:radius="6dp" />
		</shape>
	</item>

	<!-- Right shadow -->
	<item
		android:bottom="0px"
		android:left="0px"
		android:right="0px"
		android:top="0px">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<gradient
				android:angle="0"
				android:centerColor="#1000"
				android:centerY="0.99"
				android:dither="true"
				android:endColor="#8000"
				android:startColor="#1000" />

			<corners android:radius="6dp" />
		</shape>
	</item>

	<!-- Top Lighted Area -->
	<item
		android:bottom="1dp"
		android:left="0px"
		android:right="1dp"
		android:top="0px">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<gradient
				android:angle="90"
				android:centerColor="#1000"
				android:centerX="0.97"
				android:dither="true"
				android:endColor="#5aaa"
				android:startColor="#1000" />

			<corners android:radius="6dp" />
		</shape>
	</item>
	<!-- Left Lighted Area -->
	<item
		android:bottom="1dp"
		android:left="0px"
		android:right="1dp"
		android:top="0px">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<gradient
				android:angle="180"
				android:centerColor="#1000"
				android:centerY="0.99"
				android:dither="true"
				android:endColor="#5bbb"
				android:startColor="#1000" />

			<corners android:radius="6dp" />
		</shape>
	</item>

</layer-list>