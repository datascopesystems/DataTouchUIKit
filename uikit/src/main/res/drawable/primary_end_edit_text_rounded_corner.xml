<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/accent_end_dark" android:startColor="@color/accent_start_dark" android:type="linear" />
            <corners android:radius="30dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/accent_end_dark" android:startColor="@color/accent_start_dark" android:type="linear" />
            <corners android:radius="30dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <gradient android:angle="90" android:endColor="@color/accent_end" android:startColor="@color/accent_start" android:type="linear" />
            <corners android:radius="30dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
           </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="90" android:endColor="@color/accent_end" android:startColor="@color/accent_start" android:type="linear" />
            <corners android:radius="30dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

</selector>