<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:endColor="@color/md_red_500"
                android:startColor="@color/md_red_700"
                android:type="linear" />
            <corners android:radius="20dip" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/md_red_700" />
            <corners android:radius="20dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

</layer-list>