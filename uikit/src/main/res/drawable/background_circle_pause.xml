<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/accent_negative_end_dark" />
            <corners android:radius="@dimen/radius_circle_background" />
            <size android:width="@dimen/size_background_circle_pause" android:height="@dimen/size_background_circle_pause" />

        </shape>
    </item>

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/accent_negative_end_dark" />
            <corners android:radius="@dimen/radius_circle_background" />
            <size android:width="@dimen/size_background_circle_pause" android:height="@dimen/size_background_circle_pause" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/accent_negative_end" />
            <size android:width="@dimen/size_background_circle_pause" android:height="@dimen/size_background_circle_pause" />
            <corners android:radius="@dimen/radius_circle_background" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/accent_negative_end" />
            <corners android:radius="@dimen/radius_circle_background" />
            <size android:width="@dimen/size_background_circle_pause" android:height="@dimen/size_background_circle_pause" />

        </shape>
    </item>

</selector>